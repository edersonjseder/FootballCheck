    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:id="@+id/id_image_team_logo" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:text="Team: "
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:textColor="@color/text_color"
                android:visibility="invisible"
                android:textAlignment="textEnd"
                android:id="@+id/textview_team_name_label"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="60dp" />

            <TextView
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:textColor="@color/text_color"
                android:id="@+id/textview_team_name"
                android:paddingTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textview_team_name_label"
                android:layout_marginStart="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:text="Shortname: "
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:textColor="@color/text_color"
                android:visibility="invisible"
                android:textAlignment="textEnd"
                android:id="@+id/textview_short_name_team_label"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:layout_marginStart="29dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:textColor="@color/text_color"
                android:id="@+id/textview_short_name_team"
                android:paddingTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textview_short_name_team_label"
                android:layout_marginStart="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:text="Code: "
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:textColor="@color/text_color"
                android:id="@+id/textview_code_team_label"
                android:visibility="invisible"
                android:textAlignment="textEnd"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="57dp" />

            <TextView
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:textColor="@color/text_color"
                android:id="@+id/textview_code_team"
                android:paddingTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

