<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_fragment_team_detail_soccer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/field"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/team_detail_border_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:id="@+id/id_image_team_logo" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="5dp">

            <TextView
                android:text="@string/label_team_name"
                android:layout_width="120dp"
                android:layout_height="42dp"
                android:textColor="@color/text_color"
                android:textAlignment="textEnd"
                android:visibility="invisible"
                style="@style/text_label_team_detail"
                android:id="@+id/textview_team_name_label"
                android:paddingTop="20dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="42dp"
                android:textColor="@color/text_color"
                android:id="@+id/textview_team_name"
                android:paddingTop="20dp"
                android:textAlignment="textStart"
                style="@style/text_label_team_detail"
                android:paddingLeft="@dimen/padding_text_left"
                android:layout_toEndOf="@+id/textview_team_name_label" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="5dp">

            <TextView
                android:text="@string/label_team_shortname"
                android:layout_width="120dp"
                android:layout_height="42dp"
                android:textColor="@color/text_color"
                android:textAlignment="textEnd"
                android:visibility="invisible"
                style="@style/text_label_team_detail"
                android:id="@+id/textview_short_name_team_label"
                android:paddingTop="20dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="42dp"
                android:textColor="@color/text_color"
                android:id="@+id/textview_short_name_team"
                android:paddingTop="20dp"
                android:textAlignment="textStart"
                style="@style/text_label_team_detail"
                android:paddingLeft="@dimen/padding_text_left"
                android:layout_toEndOf="@+id/textview_short_name_team_label" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="5dp">

            <TextView
                android:text="@string/label_team_code"
                android:layout_width="120dp"
                android:layout_height="42dp"
                android:textColor="@color/text_color"
                android:id="@+id/textview_code_team_label"
                android:textAlignment="textEnd"
                android:visibility="invisible"
                style="@style/text_label_team_detail"
                android:paddingTop="20dp"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="42dp"
                android:textColor="@color/text_color"
                android:id="@+id/textview_code_team"
                android:textAlignment="textStart"
                style="@style/text_label_team_detail"
                android:paddingLeft="@dimen/padding_text_left"
                android:paddingTop="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="5dp">

            <TextView
                android:text="@string/label_team_market_value"
                android:layout_width="120dp"
                android:layout_height="42dp"
                android:textColor="@color/text_color"
                android:id="@+id/textview_squad_market_value_team_label"
                android:textAlignment="textEnd"
                android:visibility="invisible"
                style="@style/text_label_team_detail"
                android:paddingTop="20dp"
                android:layout_toStartOf="@+id/textview_squad_market_value_team" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="42dp"
                android:textColor="@color/text_color"
                android:id="@+id/textview_squad_market_value_team"
                android:textAlignment="textStart"
                style="@style/text_label_team_detail"
                android:paddingLeft="@dimen/padding_text_left"
                android:paddingTop="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/group_buttons"
            android:visibility="invisible"
            android:gravity="center_horizontal"
            android:padding="20dp">

            <Button
                android:text="@string/label_button_team_players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_team_players"
                android:layout_weight="1" />

            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />

            <Button
                android:text="@string/label_button_team_fixtures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_team_fixtures"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
