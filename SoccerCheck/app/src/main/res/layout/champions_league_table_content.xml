<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/id_component_card_view_champions_league_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <LinearLayout
        android:padding="@dimen/padding_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="A"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.10"
            android:id="@+id/textview_group"
            android:textSize="@dimen/TextPosition"
            android:textAlignment="center"
            android:textColor="@color/colorLabel"
            android:gravity="center_vertical"/>

        <TextView
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.12"
            android:id="@+id/textview_rank"
            android:textSize="@dimen/TextTeamName"
            android:textAlignment="center"
            android:textColor="@color/colorLabel"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.09"
            android:id="@+id/imageView_team_logo_cl"
            android:layout_centerHorizontal="true" />
        <TextView
            android:text="Arsenal FC"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.23"
            android:id="@+id/textview_team"
            android:textSize="@dimen/TextPlayedGames"
            android:paddingLeft="4dp"
            android:textColor="@color/colorLabel"
            android:gravity="center_vertical"/>

        <TextView
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.12"
            android:id="@+id/textview_played_games_cl"
            android:textSize="@dimen/TextStatusSize"
            android:textAlignment="center"
            android:textColor="@color/colorLabel"
            android:gravity="center_vertical"/>

        <TextView
            android:text="12"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.10"
            android:id="@+id/textview_points"
            android:textSize="@dimen/TextStatusSize"
            android:textAlignment="center"
            android:textColor="@color/colorLabel"
            android:gravity="center_vertical"/>

