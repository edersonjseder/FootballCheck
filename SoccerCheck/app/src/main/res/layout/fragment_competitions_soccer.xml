<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_soccer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ball_in_goal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/id_image_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_alignTop="@+id/text_view_number_of_teams_label"
        android:layout_toRightOf="@+id/text_view_number_of_teams_label"
        android:layout_toEndOf="@+id/text_view_number_of_teams_label"
        android:id="@+id/text_view_number_of_teams" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:id="@+id/text_view_number_of_match_days"
        android:layout_alignBaseline="@+id/text_view_number_of_match_days_label"
        android:layout_alignBottom="@+id/text_view_number_of_match_days_label"
        android:layout_toRightOf="@+id/text_view_number_of_match_days_label"
        android:layout_toEndOf="@+id/text_view_number_of_match_days_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_alignTop="@+id/text_view_number_games_label"
        android:layout_toRightOf="@+id/text_view_number_games_label"
        android:layout_toEndOf="@+id/text_view_number_games_label"
        android:id="@+id/text_view_number_games" />

    <TextView
        android:text="Number of Teams: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_marginTop="18dp"
        android:visibility="invisible"
        android:id="@+id/text_view_number_of_teams_label"
        android:layout_below="@+id/competition_name"
        android:layout_alignLeft="@+id/text_view_number_of_match_days_label"
        android:layout_alignStart="@+id/text_view_number_of_match_days_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:id="@+id/competition_name"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/text_view_number_of_teams_label"
        android:layout_alignStart="@+id/text_view_number_of_teams_label" />

    <TextView
        android:text="Number of Games: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:id="@+id/text_view_number_games_label"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/id_image_logo"
        android:layout_toLeftOf="@+id/text_view_number_of_teams"
        android:layout_toStartOf="@+id/text_view_number_of_teams" />

    <TextView
        android:text="Number of Match Days: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_marginTop="20dp"
        android:id="@+id/text_view_number_of_match_days_label"
        android:visibility="invisible"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/text_view_number_of_teams"
        android:layout_toEndOf="@+id/id_image_logo" />

</RelativeLayout>
