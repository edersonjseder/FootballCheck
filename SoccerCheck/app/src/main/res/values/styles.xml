<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryDark">@color/dark</item>
    </style>

    <style name="Theme.NoTitle" parent="@android:style/Theme.NoTitleBar"></style>
    <style name="Theme.FullScreen" parent="@android:style/Theme.NoTitleBar.Fullscreen"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Custom progress bar dialog -->
    <style name="CustomProgressBar" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/background</item>
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:width">200dip</item>
        <item name="android:height">50dip</item>
    </style>

    <!-- Custom progress bar dialog -->
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@drawable/progress_bar_background</item>
        <item name="android:fullDark">@drawable/progress_bar_background</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CodeFontText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorLabel2</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- Text View Table Label Style -->
    <style name="text_label_table">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#e6e6ff</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
